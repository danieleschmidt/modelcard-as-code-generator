# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{py,pyi}]
indent_style = space
indent_size = 4
max_line_length = 88

[*.{js,ts,jsx,tsx}]
indent_style = space
indent_size = 2
max_line_length = 100

[*.{json,yml,yaml}]
indent_style = space
indent_size = 2

[*.{md,rst}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[*.{toml,ini,cfg}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 4

[*.sh]
indent_style = space
indent_size = 2

[*.{html,xml}]
indent_style = space
indent_size = 2

[*.{css,scss,sass}]
indent_style = space
indent_size = 2

[*.{sql}]
indent_style = space
indent_size = 2

[*.{Dockerfile,dockerfile}]
indent_style = space
indent_size = 2

[*.{jinja,jinja2,j2}]
indent_style = space
indent_size = 2

# Environment files
[.env*]
indent_style = space
indent_size = 2
insert_final_newline = false

# GitHub files
[.github/**]
indent_style = space
indent_size = 2

# Docker Compose files
[docker-compose*.{yml,yaml}]
indent_style = space
indent_size = 2

# Configuration files for Python tools
[{.flake8,.bandit,.safety}]
indent_style = space
indent_size = 2

# Requirements files
[requirements*.txt]
indent_style = space
indent_size = 2

# Pre-commit configuration
[.pre-commit-config.yaml]
indent_style = space
indent_size = 2